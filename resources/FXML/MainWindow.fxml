<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<SplitPane dividerPositions="0.5" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindow">
    <BorderPane prefHeight="200.0" prefWidth="200.0">
        <bottom>
            <Button fx:id="player1Button" onAction="#clickThrowDie" mnemonicParsing="false" text="throw die"
                    BorderPane.alignment="CENTER"/>
        </bottom>
        <center>
            <StackPane fx:id="p1Pane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Rectangle fx:id="p1Rect" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="200.0" stroke="BLACK"
                           strokeType="INSIDE" width="200.0"/>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Circle fx:id="p1d1" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p1d2" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p1d3" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p1d4" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                            GridPane.valignment="CENTER"/>
                    <Circle fx:id="p1d5" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p1d6" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                            GridPane.valignment="CENTER"/>
                </GridPane>
                <Circle fx:id="p1d7" radius="25.0" stroke="BLACK" strokeType="INSIDE"/>
            </StackPane>
        </center>
        <top>
            <Label fx:id="labelPlayer1" text="Player 1" BorderPane.alignment="CENTER"/>
        </top>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0">
        <bottom>
            <Button fx:id="player2Button" disable="${!player1Button.disable}" onAction="#clickThrowDie"
                    mnemonicParsing="false" text="throw die"
                    BorderPane.alignment="CENTER"/>
        </bottom>
        <center>
            <StackPane fx:id="p2Pane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Rectangle fx:id="p2Rect" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="200.0" stroke="BLACK"
                           strokeType="INSIDE" width="200.0"/>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Circle fx:id="p2d1" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p2d2" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p2d3" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p2d4" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                            GridPane.valignment="CENTER"/>
                    <Circle fx:id="p2d5" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
                    <Circle fx:id="p2d6" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                            GridPane.valignment="CENTER"/>
                </GridPane>
                <Circle fx:id="p2d7" radius="25.0" stroke="BLACK" strokeType="INSIDE"/>
            </StackPane>
        </center>
        <top>
            <Label fx:id="labelPlayer2" text="Player 2" BorderPane.alignment="CENTER"/>
        </top>
    </BorderPane>
</SplitPane>
